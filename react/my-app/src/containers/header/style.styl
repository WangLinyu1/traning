.root
    display:flex
    flex-grow: 1
    margin-bottom: 0px
    header
      padding-right: 0px
    color:white

  .appbar
    background-color: #A52A2A !important
    & .toolbar
        background-color: inherit;
    & .home-icon
        margin-right: 8px

  .grow
    flex-grow: 1



  .rightMenuButton
     button
       padding: 0px
       color: #fff
  .left_border
    color: white
    padding: 5px
    border-left:solid black 2px

  .rightMenu
    ul
      outline-style: none
      box-shadow: none
      border-color: transparent
      padding: 0px

  .list
    border-right: 2px solid black
    margin: 0px
    height: calc(100vh - 40px)
    width: 240px
    background-color: #FFFFF0
    padding-left: 0px
    padding-right: 0px
    position: fixed
    overflow: scroll